# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /umbox-setup                controllers.UmboxController.umboxSetup()
GET     /funcy-view                 controllers.FuncyController.funcyView()
GET     /db-management              controllers.DBManagementController.dbManagementView()
GET     /info                       controllers.DeviceController.deviceInfo(id: String ?= "")

POST    /add-umbox-submit           controllers.UmboxController.addUmboxImage()
POST    /edit-umbox-submit          controllers.UmboxController.editUmboxImage()
POST    /delete-umbox-image         controllers.UmboxController.deleteUmboxImage()
POST    /funcy-monitoring-values    controllers.FuncyController.selectMonitoringValues()
POST    /funcy-close-stream         controllers.FuncyController.closeInputStream()
POST    /setup-database             controllers.HomeController.setupDatabase()
POST    /reset-database             controllers.HomeController.resetDatabase()
POST    /list-all-databases         controllers.HomeController.listAllDatabases()

GET     /umbox-images               controllers.UmboxController.getUmboxImages()
GET     /funcy-baud-rates           controllers.FuncyController.getBaudRates()
GET     /funcy-monitoring-values    controllers.FuncyController.getMonitoringValues()
GET     /funcy-serial-ports         controllers.FuncyController.getAvailableSerialPorts()
GET     /funcy-output               controllers.FuncyController.socket()
GET     /state-history              controllers.DeviceController.getStateHistory(id: Integer ?= -1)
GET     /device-history             controllers.DeviceController.getDeviceHistory(id: Integer ?= -1)
GET     /alert-history              controllers.DeviceController.getAlertHistory(id: Integer ?= -1)

GET     /alert-types                controllers.AlertTypeController.getAlertTypes()
POST    /edit-alert-type            controllers.AlertTypeController.editAlertType()
POST    /add-or-update-alert-type   controllers.AlertTypeController.addOrUpdateAlertType()
POST    /delete-alert-type          controllers.AlertTypeController.deleteAlertType()
POST    /clear-alert-type-form      controllers.AlertTypeController.clearAlertTypeForm()

GET     /device-types               controllers.DeviceTypeController.getDeviceTypes()
POST    /edit-device-type           controllers.DeviceTypeController.editDeviceType()
POST    /add-or-update-device-type  controllers.DeviceTypeController.addOrUpdateDeviceType()
POST    /delete-device-type         controllers.DeviceTypeController.deleteDeviceType()
POST    /clear-device-type-form     controllers.DeviceTypeController.clearDeviceTypeForm()

GET     /groups                     controllers.GroupController.getGroups()
POST    /edit-group                 controllers.GroupController.editGroup()
POST    /add-or-update-group        controllers.GroupController.addOrUpdateGroup()
POST    /delete-group               controllers.GroupController.deleteGroup()
POST    /clear-group-form           controllers.GroupController.clearGroupForm()

GET     /security-states                controllers.SecurityStateController.getSecurityStates()
POST    /edit-security-state            controllers.SecurityStateController.editSecurityState()
POST    /add-or-update-security-state   controllers.SecurityStateController.addOrUpdateSecurityState()
POST    /delete-security-state          controllers.SecurityStateController.deleteSecurityState()
POST    /clear-security-state-form      controllers.SecurityStateController.clearSecurityStateForm()

GET     /tags                       controllers.TagController.getTags()
POST    /edit-tag                   controllers.TagController.editTag()
POST    /add-or-update-tag          controllers.TagController.addOrUpdateTag()
POST    /delete-tag                 controllers.TagController.deleteTag()
POST    /clear-tag-form             controllers.TagController.clearTagForm()

GET     /device                     controllers.DeviceController.getDevice(id: String ?= "")
GET     /devices                    controllers.DeviceController.getDevices()
POST    /edit-device                controllers.DeviceController.editDevice()
POST    /add-or-update-device       controllers.DeviceController.addOrUpdateDevice()
POST    /delete-device              controllers.DeviceController.deleteDevice()
POST    /clear-device-form          controllers.DeviceController.clearDeviceForm()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
