# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /add-device                 controllers.DeviceController.addDevice()
GET     /umbox-setup                controllers.UmboxController.umboxSetup()
GET     /funcy-view                 controllers.FuncyController.funcyView()
GET     /info                       controllers.DeviceController.deviceInfo(id: Integer ?= -1)

POST    /add-device-submit          controllers.DeviceController.submit()
POST    /add-group-id               controllers.DeviceController.addGroupId()
POST    /add-type                   controllers.DeviceController.addType()
POST    /add-tag                    controllers.DeviceController.addTag()
POST    /clean                      controllers.HomeController.clean()
GET     /log-umboxes                controllers.UmboxController.logUmboxes()
GET     /log-devices                controllers.DeviceController.logDevices()

GET     /device                     controllers.DeviceController.getDevice(id: Integer ?= -1)
GET     /devices                    controllers.DeviceController.getDevices()
GET     /group-ids                  controllers.DeviceController.getGroupIds()
GET     /types                      controllers.DeviceController.getTypes()
GET     /tags                       controllers.DeviceController.getTags()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
