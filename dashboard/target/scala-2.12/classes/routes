# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /add-device                 controllers.DeviceController.addDevice()
POST    /add-device-submit          controllers.DeviceController.submit()
GET     /clean                      controllers.DeviceController.clean()
GET     /log-umboxes                controllers.UmboxController.logUmboxes()
GET     /info                       controllers.DeviceController.deviceInfo(id: String ?= "Fake Device")
GET     /log-devices                controllers.DeviceController.logDevices()
GET     /devices                    controllers.DeviceController.getDevices()
GET     /group-ids                  controllers.DeviceController.getGroupIds()
GET     /types                      controllers.DeviceController.getTypes()
GET     /tags                       controllers.DeviceController.getTags()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
